{
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 80,
    "overrides": [
        {
            "files": ["*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": { "parser": "json" }
        }
    ]
}
